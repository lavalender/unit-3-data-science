<!doctype html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
      <title>Browse Products</title>
    </head>

  <body class="bg-gray-50">
    {% include "components/navbar.html.jinja" %}

    <h1 class="text-center text-3xl font-black my-6">
      Browse my products
    </h1>

    <!-- Product Grid -->
    <main class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 max-w-7xl mx-auto px-6 pb-10">
      {% for x in products %}
        <a
          href="/product/{{ x['ID'] }}"
          class="bg-white rounded-xl shadow hover:shadow-lg transition p-3 block"
        >
          <!-- Product Image -->
          <div class="w-full aspect-square overflow-hidden rounded-lg bg-gray-100">
            <img
              src="{{ x['Image'] }}"
              alt="{{ x['Name'] }}"
              class="w-full h-full object-cover"
            >
          </div>

          <!-- Product Info -->
          <div class="mt-4 space-y-1">
            <h3 class="text-lg font-semibold text-gray-800 line-clamp-1">
              {{ x["Name"] }}
            </h3>

            <p class="text-xl font-bold text-gray-900">
              ${{ x["Price"] }}
            </p>

            <p class="text-sm text-gray-500">
              {{ x["Category"] }}
            </p>
          </div>
        </a>
      {% endfor %}
    </main>
  </body>
</html>

