<!doctype html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>

{% include "components/navbar.html.jinja" %}

<div class="flex flex-row gap-10 mt-10">

    <div class="flex flex-row gap-8 p-5 mt-10">

        <!-- Left: Product Image -->
        <div class="w-150 aspect-square overflow-hidden rounded-lg">
            <img
                src="{{ product['Image'] }}"
                alt="{{ product['Name'] }}"
                class="w-full h-full object-cover">
        </div>

        <!-- Right: Product Info -->
        <div class="flex flex-col gap-6 max-w-xl">

            <h1 class="text-3xl font-bold text-gray-900">
                {{ product["Name"] }}
            </h1>

            <p class="text-gray-600 text-lg font-bold">
                ${{ product["Price"] }}
            </p>

            <form method="post" action="/product/{{ product['ID'] }}/add_to_cart">
                <label>Quantity:</label>
                <input type="number" name="quantity" value="1" min="1" max="20"
                       class="w-16 border rounded px-1">

                <button class="bg-red-500 text-white px-4 py-2 rounded ml-2">
                    Add to cart
                </button>
            </form>

            <!-- Description -->
            <div class="bg-gray-100 rounded-xl shadow p-4">
                <p class="font-bold text-2xl mb-1">Description</p>

                <p class="text-gray-700">
                    {{ product["Description"] }}
                </p>
            </div>

        </div>
    </div>
</div>


    {% if products %}
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for item in products %}
        <a href="/product/{{ item['ID'] }}"
           class="block bg-white shadow-md rounded-xl p-4 hover:shadow-xl">

            <img src="{{ item['Image'] }}"
                 alt="{{ item['Name'] }}"
                 class="w-full h-48 object-cover rounded-lg mb-3">

            <h3 class="text-lg font-semibold">
                {{ item['Name'] }}
            </h3>

            <p class="text-gray-700 font-medium">
                ${{ item['Price'] }}
            </p>
        </a>
        {% endfor %}
    </div>
    {% endif %}
</div>
<div class="mt-12 bg-white p-6 rounded-lg shadow">
    <h3 class="text-2xl font-semibold mb-4">Write a Review</h3>

    <form method="post" action="/product/{{ product['ID'] }}/review" class="space-y-4">

    
        <!-- Rating -->
        <div>
            <label class="block text-sm font-medium mb-1">Rating</label>
            <select
                name="rating"
                required
                class="w-full border rounded px-3 py-2">
                <option value="">Select rating</option>
                {% for i in range(5, 0, -1) %}
                    <option value="{{ i }}">{{ i }} Stars</option>
                {% endfor %}
            </select>
        </div>

        <!-- Content -->
        <div>
            <label class="block text-sm font-medium mb-1">Review</label>
            <textarea
                name="comment"
                rows="4"
                required
                class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-red-400"></textarea>
        </div>

        <button
            type="submit"
            class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600">
            Submit Review
        </button>
    </form>
</div>

    <div class="py-12 px-4 max-w-4xl mx-auto">
        <h2 class="text-3xl font-semibold text-gray-800 mb-8">
            Reviews
        </h2>

        {% for review in reviews %}
        <div class="bg-white p-6 mb-6 rounded-lg shadow">

            <!-- Author + Time -->
            <div class="text-sm text-gray-500 mb-2">
                <span class="font-medium text-gray-700">
                    {{ review.Name }}
                </span>
                • {{ review.Timestamp.strftime("%b %d, %Y • %I:%M %p") }}
            </div>

            <!-- Stars -->
            <div class="flex text-yellow-400 text-lg mb-3">
                {% for i in range(review.Rating) %}
                    ★
                {% endfor %}
                {% for i in range(5 - review.Rating) %}
                    ☆
                {% endfor %}
            </div>

            <!-- Comment -->
            <p class="text-gray-700 leading-relaxed">
                {{ review.Comments }}
            </p>

        </div>
        {% else %}
        <p class="text-gray-500">No reviews yet.</p>
        {% endfor %}
    </div>

</body>
</html>