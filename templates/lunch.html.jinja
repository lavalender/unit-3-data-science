<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Products</title>
  </head>

  <body class="bg-white">
    {% include "components/navbar.html.jinja" %}

    <div class="py-16 sm:py-24 lg:mx-auto lg:max-w-7xl lg:px-8">
      <!-- Header -->
      <div class="flex items-center justify-between px-4 sm:px-6 lg:px-0">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900">
          Trending products
        </h2>
        <a href="#" class="hidden text-sm font-semibold text-blue-600 hover:text-cyan-500 sm:block">
          Search more <span aria-hidden="true">→</span>
        </a>
      </div>

      <!-- Products -->
      <div class="relative mt-8">
        <div class="relative -mb-6 w-full overflow-x-auto pb-6">
          <ul
            role="list"
            class="mx-4 inline-flex space-x-8 sm:mx-6 lg:mx-0 lg:grid lg:grid-cols-4 lg:gap-x-8 lg:space-x-0"
          >
            {% for x in products %}
            <li class="inline-flex w-64 flex-col text-center lg:w-auto">
              <div class="group relative">
                <!-- Image -->
                <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200">
                  <img
                    src="{{ x['Image'] }}"
                    alt="{{ x['Name'] }}"
                    class="h-full w-full object-cover object-center group-hover:opacity-75"
                  >
                </div>

                <!-- Info -->
                <div class="mt-6">
                  <p class="text-sm text-gray-500">
                    {{ x["Category"] }}
                  </p>

                  <h3 class="mt-1 font-semibold text-gray-900">
                    <a href="/product/{{ x['ID'] }}">
                      <span class="absolute inset-0"></span>
                      {{ x["Name"] }}
                    </a>
                  </h3>

                  <p class="mt-1 text-gray-900">
                    ${{ x["Price"] }}
                  </p>
                </div>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <!-- Mobile link -->
      <div class="mt-12 flex px-4 sm:hidden">
        <a href="#" class="text-sm font-semibold text-blue-600 hover:text-cyan-500">
          Search more <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </body>
</html>
